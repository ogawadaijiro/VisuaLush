<main>
  <div class="container py-4">
    <header class="pb-3 mb-4 border-bottom">
      <div class="d-flex align-items-center text-dark text-decoration-none">
        <%= image_tag current_user.avatar.thumb.url, class: 'img-profile rounded-circle me-2', size: '50x50' %>
        <span class="fs-4"><%= link_to @post.user.name, posts_path %></span>
      </div>
    </header>

    <%= image_tag @post.image.url, class: "container-a bg-light", size: '500x500', alt: "http://www.w3.org/2000/svg" %>
  </div>
  <div class="container-b pb-4">
    <div class="text-end">
      <% if @post.liked?(current_user) %>
        <%= link_to post_like_path(@post.id), method: :delete do %>
         <i class="fas fa-heart"></i>
        <% end %>
      <% else %>
        <%= link_to post_likes_path(@post.id), method: :post do %>
         <i class="far fa-heart"></i>
        <% end %>
      <% end %>
    </div>
    <%= @post.description %>
  </div>


  <%= render 'comments/form', { post: @post, comment: @comment } %>

  <%= render 'comments/comments', { comments: @comments } %>
</main>

