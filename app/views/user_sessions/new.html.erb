<main>
<div class="container">

  <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

          <div class="d-flex justify-content-center py-4">
          </div>

          <div class="card mb-3">

            <div class="card-body">

              <div class="pt-4 pb-2">
                <h5 class="card-title text-center pb-0 fs-4">ログイン</h5>
                <p class="text-center small">会員登録はこちら<%= link_to "会員登録", new_user_path %></p>
              </div>

              <%= form_with url: user_sessions_path, local: true, html: {class: "row g-3 needs-validation" }  do |f| %>
                <div class="col-12">
                  <%= f.label :email, User.human_attribute_name(:email), class: 'form-label' %>
                  <%= f.email_field :email, class: 'form-control' %>
                </div>

                <div class="col-12">
                  <%= f.label :password, User.human_attribute_name(:password), class: 'form-label' %>
                  <%= f.password_field :password, class: 'form-control' %>
                </div>

                <div class="col-12">
                  <%= f.submit "ログイン", class: 'btn btn-primary w-100' %>
                </div>
                <div class="col-12">
                </div>
              <% end %>

            </div>
          </div>

          <div class="credits">
          </div>

        </div>
      </div>
    </div>

  </section>

</div>
</main>