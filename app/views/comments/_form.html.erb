<div class="flex justify-between items-center mb-6">
<h2 class="text-lg lg:text-2xl font-bold text-gray-900 dark:text-white">コメント (<%= post.comments.count %>)</h2>
</div>
<%= form_with model: [post, comment], local: true, html: { class: "mb-6" } do |f| %>
  <div class="py-2 px-4 mb-4 bg-white rounded-lg rounded-t-lg border border-gray-200 dark:bg-gray-800 dark:border-gray-700">
    <%= f.label :body, id: "comment", class: "sr-only" do %>Your comment<% end %>
    <%= f.text_area :body, placeholder: "コメントを入力してください", rows: "4", id: "comment", class: "px-0 w-full text-sm border-0 focus:ring-0 focus:outline-none dark:text-white dark:placeholder-gray-400 dark:bg-gray-800" %>
  </div>
  <%= f.submit '投稿', class: 'inline-flex items-center py-2.5 px-4 text-xs font-medium text-center text-indigo-500 bg-indigo-100 rounded-lg focus:ring-4 focus:ring-primary-200 dark:focus:ring-primary-900 hover:bg-primary-800' %>
<% end %>